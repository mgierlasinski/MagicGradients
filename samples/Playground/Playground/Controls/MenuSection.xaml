<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Playground.Controls.MenuSection">
    <ContentView.ControlTemplate>
      <ControlTemplate>
          <StackLayout Orientation="Horizontal" Margin="5,0" Spacing="10">
              <ContentPresenter />
              <BoxView Style="{StaticResource Separator}" HorizontalOptions="FillAndExpand" VerticalOptions="Center" Margin="0,2,0,0" />
          </StackLayout>
        </ControlTemplate>
  </ContentView.ControlTemplate>
</ContentView>