  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\MagicGradients\MagicGradients.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Compile Update="Controls\ColorsTab.xaml.cs">
