<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="Playground.Views.SplashPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:magicGradients="clr-namespace:MagicGradients;assembly=MagicGradients">
    <ContentPage.Content>
        <magicGradients:GradientView HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
            <magicGradients:LinearGradient x:Name="SplashTarget">
                <magicGradients:GradientStop Color="#61ed54" />
            </magicGradients:LinearGradient>
        </magicGradients:GradientView>
    </ContentPage.Content>
</ContentPage>